    "# === åŒ¯å…¥å¥—ä»¶ ===\n",
    "from selenium import webdriver\n",
    "from selenium.webdriver.chrome.options import Options\n",
    "from selenium.webdriver.common.by import By\n",
    "from selenium.webdriver.support.ui import WebDriverWait\n",
    "from selenium.webdriver.support import expected_conditions as EC\n",
    "from bs4 import BeautifulSoup\n",
    "import pandas as pd\n",
    "import time, os, random\n",
    "\n",
    "# === 1ï¸âƒ£ è¨­å®šæª”æ¡ˆå„²å­˜ä½ç½® ===\n",
    "save_dir = \"C:/Users/User/Desktop/è–ªè³‡è³‡æ–™\"\n",
    "os.makedirs(save_dir, exist_ok=True)\n",
    "\n",
    "# === 2ï¸âƒ£ è¨­å®š Chrome ç€è¦½å™¨ ===\n",
    "options = Options()\n",
    "options.add_argument(\"--headless\")       \n",
    "options.add_argument(\"--disable-gpu\")\n",
    "options.add_argument(\"--window-size=1920,1080\")\n",
    "\n",
    "driver = webdriver.Chrome(options=options)\n",
    "wait = WebDriverWait(driver, 20)  # æœ€å¤šç­‰ 20 ç§’è¼‰å…¥\n",
    "\n",
    "all_data = []\n",
    "\n",
    "# === 3ï¸âƒ£ æ‰¹æ¬¡ä¸‹è¼‰æ¯å¹´é é¢ ===\n",
    "for year in range(2026, 2019, -1):  # 2026 â†’ 2020\n",
    "    url = f\"https://www.spotrac.com/mlb/rankings/player/_/year/{year}/position/b/sort/cap_total\"\n",
    "    print(f\"ğŸ“… æ­£åœ¨é–‹å•Ÿ {year} å¹´é é¢...\")\n",
    "    driver.get(url)\n",
    "\n",
    "    # ç­‰å¾…çƒå“¡æ¸…å–®è¼‰å…¥\n",
    "    try:\n",
    "        wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, \"li.list-group-item\")))\n",
    "        time.sleep(random.uniform(1.5, 3))  # é¡å¤–ç·©è¡\n",
    "    except:\n",
    "        print(f\"âš ï¸ {year} å¹´é é¢è¼‰å…¥é€¾æ™‚ï¼Œç•¥éã€‚\")\n",
    "        continue\n",
    "\n",
    "    # å„²å­˜ HTML\n",
    "    html = driver.page_source\n",
    "    file_path = os.path.join(save_dir, f\"MLB_{year}_Payroll.html\")\n",
    "    with open(file_path, \"w\", encoding=\"utf-8\") as f:\n",
    "        f.write(html)\n",
    "    print(f\"âœ… å·²å„²å­˜ï¼š{file_path}\")\n",
    "\n",
    "    # è§£æç•¶å¹´åº¦è–ªè³‡è³‡æ–™\n",
    "    soup = BeautifulSoup(html, \"html.parser\")\n",
    "    for item in soup.select(\"li.list-group-item\"):\n",
    "        name_tag = item.select_one(\"a.link\")\n",
    "        team_tag = item.select_one(\"small\")\n",
    "        salary_tag = item.select_one(\"span.medium\")\n",
    "        if name_tag and team_tag and salary_tag:\n",
    "            name = name_tag.text.strip()\n",
    "            team_pos = team_tag.text.strip()\n",
    "            salary = salary_tag.text.strip().replace(\"\\n\", \"\").replace(\" \", \"\")\n",
    "            all_data.append([year, name, team_pos, salary])\n",
    "\n",
    "    print(f\"ğŸ“Š {year} å¹´å…±æ“·å– {len(all_data)} ç­†è³‡æ–™ã€‚\")\n",
